<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/custom_recyclerview"
    android:layout_marginTop="8dp"
    >

    <TextView
        android:id="@+id/history_nama_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/history_nominal"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Gregorius Kikyo" />

    <TextView
        android:id="@+id/history_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_nama_siswa"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="#c4c4c4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_nama_siswa"
        tools:text="Rp 500.000,00" />

    <TextView
        android:id="@+id/history_tanggal"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@id/history_nominal"
        android:textColor="#c62828"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21 Oktober 2021" />

</androidx.constraintlayout.widget.ConstraintLayout>
