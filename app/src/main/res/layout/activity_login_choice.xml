<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:overScrollMode="never">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kenali Dirimu"
        android:textColor="#121212"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="263dp"
        android:layout_height="201dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/illustration2"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_siswa"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Masuk Sebagai SISWA"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="40dp"
        app:icon="@drawable/chevron_right"
        app:iconGravity="end"
        app:iconSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_staff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintVertical_chainStyle="packed"
        app:rippleColor="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_staff"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Masuk Sebagai STAFF"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="40dp"
        app:icon="@drawable/chevron_right"
        app:iconGravity="end"
        app:iconSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_siswa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_siswa"
        app:layout_constraintTop_toBottomOf="@+id/btn_siswa"
        app:rippleColor="@null" />
</androidx.constraintlayout.widget.ConstraintLayout>