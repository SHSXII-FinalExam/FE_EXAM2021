        <!--Activity Admin-->
        <activity android:name=".UI.Home.punyaAdmin.HomeAdminActivity" />
        <activity android:name=".UI.Home.punyaAdmin.DataPetugasActivity" />
        <activity android:name=".UI.Home.punyaAdmin.DataKelasActivity" />
        <activity android:name=".UI.Home.punyaAdmin.DataSPPActivity" />

        <meta-data
