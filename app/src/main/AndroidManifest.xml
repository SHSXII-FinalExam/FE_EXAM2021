        </activity>
        <activity android:name=".UI.Splash.LoginChoiceActivity" />

        <!--Activity Siswa-->
        <activity android:name=".UI.Home.punyaSiswa.LoginSiswaActivity" />
        <activity android:name=".UI.Home.punyaSiswa.HomeSiswaActivity" />

