<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.modul_spp_ukk2021">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SiAKAD"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ModulSPP_UKK2021"
        android:usesCleartextTraffic="true">

        <!--Splash & Onboarding-->
        <activity
            android:name=".UI.UI.Splash.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Login-->
        <activity android:name=".UI.UI.Splash.LoginChoiceActivity" />
        <activity android:name=".UI.UI.Home.punyaSiswa.LoginSiswaActivity" />
        <activity android:name=".UI.UI.Home.punyaPetugas.LoginStaffActivity" />

        <!--Activity Siswa-->
        <activity android:name=".UI.UI.Home.punyaSiswa.HomeSiswaActivity" />

        <!--Activity Petugas-->
        <activity
            android:name=".UI.UI.Home.punyaPetugas.HomePetugasActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".UI.UI.Home.punyaPetugas.PembayaranActivity" />

        <!--Activity Admin-->
        <activity android:name=".UI.UI.Home.punyaAdmin.HomeAdminActivity" />
        <activity android:name=".UI.UI.Home.punyaAdmin.DataSiswaActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>